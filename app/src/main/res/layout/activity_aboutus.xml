<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_back_color"
    tools:context=".activity.AboutUsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:id="@+id/backbtn"
            android:src="@drawable/back"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/head"
            android:src="@drawable/header"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/descript"
            android:layout_below="@+id/head"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lovers_quarrel"
            android:gravity="center"
            android:text="Your book of Identities"
            android:textColor="#0c1c43"
            android:textSize="29sp" />


        <LinearLayout
            android:layout_below="@+id/descript"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="50dp"
                app:cardBackgroundColor="@color/screen_back_color"
                android:layout_below="@+id/mainheader">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Developer"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#0B4A53"
                        android:fontFamily="@font/marcellus_sc"
                        android:layout_weight="3"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent"
                        android:background="#093F47"
                        android:layout_weight="3.65"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="12dp"
                            android:src="@drawable/soumen"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:textColor="#0D5863"
                                android:gravity="center"
                                android:padding="5dp"
                                android:fontFamily="@font/josefin_sans_semibold"
                                android:textSize="17sp"
                                android:text="Soumen Paul\n\nCSE Undergrad\n\n(2020-2024)"
                                />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:padding="12dp"
                                android:id="@+id/linkedin"
                                android:src="@drawable/linkedin"/>




                        </LinearLayout>









                    </LinearLayout>








                </LinearLayout>





            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:cardCornerRadius="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="40dp"
                app:cardBackgroundColor="@color/screen_back_color"
                android:layout_below="@+id/mainheader">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent"
                        android:layout_weight="3.4"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Pehchaan's Vision"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#0B4A53"
                        android:fontFamily="@font/marcellus_sc"
                        android:layout_weight="3"/>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="match_parent"
                        android:background="#093F47"
                        android:layout_weight="3.65"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="#0D5863"
                            android:gravity="center"
                            android:padding="5dp"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:textSize="17sp"
                            android:text="Pehchaan is your book of identities that comes along with various other features to make your life more sorted and cheerful"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:padding="12dp"
                            android:src="@drawable/about2"/>




                    </LinearLayout>








                </LinearLayout>





            </androidx.cardview.widget.CardView>










        </LinearLayout>



    </RelativeLayout>




</ScrollView>