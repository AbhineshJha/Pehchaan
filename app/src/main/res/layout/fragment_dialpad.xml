<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_back_color"
    tools:context=".fragment.DialpadFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/header" />

        <TextView
            android:id="@+id/descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lovers_quarrel"
            android:gravity="center"
            android:text="Your Book of Identities"
            android:textColor="@color/txt_color"
            android:textSize="29sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="300dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shownum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text=" "
                    android:textColor="#09343A"
                    android:textSize="30sp" />

                <ImageView
                    android:id="@+id/backspace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:src="@drawable/backspace" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#063B43"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#063B43"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#063B43"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#063B43"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#063B43"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#063B43"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sevens"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="#063B43"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="#063B43"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="#063B43"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/star"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="#063B43"
                    android:textSize="60sp" />

                <TextView
                    android:id="@+id/zero"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#063B43"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/hash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:gravity="center"
                    android:text="#"
                    android:textColor="#063B43"
                    android:textSize="30sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearcall"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:id="@+id/add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/plus" />

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/phone" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/delete" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>